<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <% include ../partials/header.ejs %>
    <link rel="stylesheet" type="text/css" href="/stylesheets/registration.css"/>
</head>

<body>

<% include ../partials/nav.ejs %>

<div id="grid">
    <div class="row">
        <div class="three columns" id="background">
            <h6></h6>
        </div>
        <div class="two columns">
            <h6></h6>
        </div>
        <div class="seven columns">
            <h6></h6>
        </div>
        <div class="row inner">
            <div class="three columns">
                <br>
                <li id="add"><span class="glyphicon glyphicon-plus"></span><i class="fa fa-plus" aria-hidden="true"></i>&nbsp&nbsp&nbspAdd
                    a chore
                </li>
                <ul dnd-list="models.lists.Unassigned" class="unassigned">
                    <li ng-repeat="item in models.lists.Unassigned"
                        dnd-draggable="item"
                        dnd-moved="models.lists.Unassigned.splice($index, 1)"
                        dnd-effect-allowed="move"
                        class="unassigned">
                        {{item.name}}
                    </li>
                </ul>
            </div>

            <div class="one columns">
                <h6></h6>
            </div>

            <div class="six columns">
                <div class="container-fluid">

                    <br>

                    <div class="row">
                        <h2>Add A Child Account</h2>
                    </div>

                    <div class="row">
                        <label>Child Name</label>
                        <input type="" name="" class="form-control" id="" value="">
                    </div>

                    <div class="row">
                        <label>Username</label>
                        <input type="" name="" class="form-control" id="" value="">
                    </div>

                    <div class="row">
                        <label>Password</label>
                        <input type="password" name="" class="form-control" id="" value="">
                    </div>

                    <div class="row">
                        <label>Confirm Password</label>
                        <input type="password" name="" class="form-control" id="" value="">
                    </div>

                    <br>

                    <div class="row">
                    <div class="form-group col-md-6">
                        <button type="Cancel" class="btn btn-primary" id="cancel">Cancel</button>
                    </div>

                    <div class="form-group col-md-6">
                        <button type="Submit" class="btn btn-primary" id="submit">Submit</button>
                    </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>